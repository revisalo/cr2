<h1>Pensum</h1>


<h2>sections</h2>
   <table>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Credits</th>      
    </tr>
  
  <% for section in Pensum.find(params[:id]).sections %>
    <tr>
      <td><%= section.day %></td>
      <td><%= section.name %></td>
      <td><%= section.credits %></td>
      <td><%= link_to 'Show', section %></td>
      <td><%= link_to 'Edit', edit_section_path(section) %></td>
      <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

<h2>Add section</h2>
<%= form_for @section, :url => {:action => 
	:create, :id => Pensum.find(params[:id]).id} do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :day %><br />
    <%= f.text_field :day %>
  </div>
  <div class="field">
    <%= f.label :hour %><br />
    <%= f.text_field :hour %>
  </div>
  <div class="field">
    <%= f.label :subject_id %><br />
    <%= f.text_field :subject_id %>
  </div>
  <div class="field">
    <%= f.label :pensum_id %><br />
    <%= f.text_field :pensum_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to "back", pensums_path  %>
  </div>
<% end %>