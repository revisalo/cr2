<h1>Manage pensum schedule</h2>
<h2>Schedule</h2>
  <table>
    <tr>
      <th>Hour</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
    </tr>
    <!--1-8 are the hours of the day--> 
    <% for j in 1..8 %>
      <tr> 
        <!--1 being monday and 6 being saturday--> 
        <% for i in 0..6 %>
          <td>
              <%if i==0 %>
                <% if j==1 %>
                  <%="07:00 - 08:20" %>
                <% end %>
                <% if j==2 %>
                  <%="08:30 - 09:50" %>
                <% end %>
                <% if j==3 %>
                  <%="10:00 - 11:20" %>
                <% end %>
                <% if j==4 %>
                  <%="11:30 - 12:50" %>
                <% end %>
                <% if j==5 %>
                  <%="14:00 - 15:20" %>
                <% end %>
                <% if j==6 %>
                  <%="15:30 - 16:50" %>
                <% end %>
                <% if j==7 %>
                  <%="17:00 - 18:20" %>
                <% end %>
                <% if j==8 %>
                  <%="18:30 - 19:50" %>
                <% end %>
              <% end %>
            <% for section in Pensum.find(params[:id]).sections %>
              <%if section.day == i && section.hour == j %>
              <%=section.subject_id%>
              <% end %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>

