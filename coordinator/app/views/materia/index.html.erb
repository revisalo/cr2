<h1>Materias</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Codigo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @materia.each do |materium| %>
  <tr>
    <td><%= materium.nombre %></td>
    <td><%= materium.codigo %></td>
    <td><%= link_to 'Mostrar', materium %></td>
    <td><%= link_to 'Editar', edit_materium_path(materium) %></td>
    <td><%= link_to 'Eliminar', materium, method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta materia?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Materia', new_materium_path %>
